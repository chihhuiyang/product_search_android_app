<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp">


    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="600dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <HorizontalScrollView
                android:id="@+id/horizontal_scroll_gallery"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:background="#000000"
                android:layout_gravity="center_horizontal"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/product_img_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="22sp"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="$Price"
                    android:textColor="#6400FF"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_ship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="With Shipping"
                    android:textColor="#858585"
                    android:textSize="18dp"
                     />
            </LinearLayout>


            <!--divider-->
            <View
                android:id="@+id/product_divider1"
                android:layout_width="match_parent"
                android:layout_height="1px"

                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/place_autocomplete_prediction_primary_text_highlight" />

            <!--Highlight-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/product_highlight_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/product_highlight_txt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Highlights"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <!--Highlight subtitle-->
            <LinearLayout
                android:id="@+id/product_highlight_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/product_highlight_subtitle_name"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Subtitle"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="16sp"
                     />

                <TextView
                    android:id="@+id/product_highlight_subtitle_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="subtitle"
                    android:visibility="gone"
                    android:textColor="#858585"
                    android:textSize="16sp"
                     />
            </LinearLayout>


            <!--Highlight price-->
            <LinearLayout
                android:id="@+id/product_highlight_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/product_highlight_price_name"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Price"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/product_highlight_price_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="price"
                    android:textColor="#858585"
                    android:textSize="16sp"
                    />
            </LinearLayout>


            <!--Highlight brand-->
            <LinearLayout
                android:id="@+id/product_highlight_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/product_highlight_brand_name"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Brand"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/product_highlight_brand_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="brand"
                    android:visibility="gone"
                    android:textColor="#858585"
                    android:textSize="16sp"
                    />
            </LinearLayout>



            <!--divider-->
            <View
                android:id="@+id/product_divider2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:visibility="gone"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/place_autocomplete_prediction_primary_text_highlight" />

            <!--Specifications-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/product_spec_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/product_spec_txt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Specifications"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:visibility="gone"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/specList"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:clipToPadding="false"
                android:divider="@null"
                android:isScrollContainer="false"
                android:textSize="16sp"
                android:paddingBottom="16dp"
                android:visibility="visible" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>