<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="330dp"
        tools:layout_editor_absoluteY="0dp">


        <!--sold-->
        <!--android:visibility="gone"-->
        <LinearLayout
            android:id="@+id/sold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sold_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/sold_txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:text="Sold By"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!--store-->
        <LinearLayout
            android:id="@+id/store"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Store Name"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/store_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="val"
                android:textColor="#858585"
                android:textSize="16sp"

                />
        </LinearLayout>


        <!--score-->
        <LinearLayout
            android:id="@+id/score"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Feedback Score"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/score_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="val"
                android:textColor="#858585"
                android:textSize="16sp"
                />
        </LinearLayout>


        <!--android:visibility="gone"-->
        <!--pop-->
        <LinearLayout
            android:id="@+id/pop"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Popularity"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <com.wssholmes.stark.circular_score.CircularScoreView
                android:id="@+id/pop_circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:score="50"
                app:setPrimaryColor="@color/color_orange"
                app:setSecondaryColor="@color/color_red"
                app:setBackgroundColor="@color/color_whitee"
                app:setTextColor="@color/color_black"/>

            <TextView
                android:id="@+id/pop_val"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="val"
                android:textColor="#858585"
                android:textSize="16sp"
                />
        </LinearLayout>


        <!--star-->
        <LinearLayout
            android:id="@+id/star"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Feedback Star"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/star_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/star_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="val"
                android:textColor="#858585"
                android:textSize="16sp"
                />
        </LinearLayout>


        <!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->


        <!--divider Ship-->
        <View
            android:id="@+id/divider_ship"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/place_autocomplete_prediction_primary_text_highlight" />

        <!--Ship-->
        <LinearLayout
            android:id="@+id/ship"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ship_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/ship_txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:text="Shipping Info"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!--cost-->
        <LinearLayout
            android:id="@+id/cost"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Shipping Cost"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/cost_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="val"
                android:textColor="#858585"
                android:textSize="16sp"
                />
        </LinearLayout>


        <!--global-->
        <LinearLayout
            android:id="@+id/global"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Global Shipping"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/global_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="val"
                android:textColor="#858585"
                android:textSize="16sp"
                />
        </LinearLayout>


        <!--handing-->
        <LinearLayout
            android:id="@+id/handing"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Handing Time"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/handing_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="val"
                android:textColor="#858585"
                android:textSize="16sp"
                />
        </LinearLayout>


        <!--condition-->
        <LinearLayout
            android:id="@+id/condition"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Condition"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/condition_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="val"
                android:textColor="#858585"
                android:textSize="16sp"
                />
        </LinearLayout>


        <!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->


        <!--divider return-->
        <View
            android:id="@+id/divider_return"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/place_autocomplete_prediction_primary_text_highlight" />

        <!--return-->
        <LinearLayout
            android:id="@+id/return_policy"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/return_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/return_txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:text="Return Policy"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!--android:visibility="gone"-->

        <!--policy-->
        <LinearLayout
            android:id="@+id/policy"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Policy"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/policy_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="val"
                android:textColor="#858585"
                android:textSize="16sp"
                />
        </LinearLayout>


        <!--within-->
        <LinearLayout
            android:id="@+id/within"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Returns within"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/within_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="val"
                android:textColor="#858585"
                android:textSize="16sp"
                />
        </LinearLayout>


        <!--mode-->
        <LinearLayout
            android:id="@+id/mode"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Refund Mode"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/mode_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="val"
                android:textColor="#858585"
                android:textSize="16sp"
                />
        </LinearLayout>



        <!--by-->
        <LinearLayout
            android:id="@+id/by"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Shipped by"
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/by_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="val"
                android:textColor="#858585"
                android:textSize="16sp"
                />
